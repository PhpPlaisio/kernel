/**
 * Deletes a text.
 *
 * @param p_txt_id The ID of the text to be be deleted.
 */
create procedure bbl_text_delete_text( in p_txt_id @bbl_text.txt_id%type@ )
modifies sql data
-- type: none
begin
  delete from BBL_TEXT_TRANSLATE_HISTORY
  where wrd_id = p_txt_id
  ;

  delete from BBL_TEXT_TEXT
  where wrd_id = p_txt_id
  ;

  delete from BBL_TEXT
  where wrd_id = p_txt_id
  ;
end
